<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="d.d4enterprises.androidhiverxjavaandroid.JustFromRangeRepeat">


  <Button
      android:id="@+id/btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="subscribe"
      android:text="subscribe"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent" />
  <Button
      android:id="@+id/btn1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="eg1"
      android:text="Example 1"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintRight_toRightOf="parent" />
  <Button
      android:id="@+id/btn2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="eg2"
      android:text="Example 2"
      app:layout_constraintTop_toBottomOf="@+id/btn1"
      app:layout_constraintRight_toRightOf="parent" />
  <Button
      android:id="@+id/btn3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="eg3"
      android:text="Example 3"
      app:layout_constraintTop_toBottomOf="@+id/btn2"
      app:layout_constraintRight_toRightOf="parent" />

  <Button
      android:id="@+id/btn4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="eg4"
      android:text="Example 4"
      app:layout_constraintTop_toBottomOf="@+id/btn3"
      app:layout_constraintRight_toRightOf="parent" />
  <Button
      android:id="@+id/btn5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="eg5"
      android:text="Example 5"
      app:layout_constraintTop_toBottomOf="@+id/btn4"
      app:layout_constraintRight_toRightOf="parent" />
  <Button
      android:id="@+id/btn6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="eg6"
      android:text="Example 6"
      app:layout_constraintTop_toBottomOf="@+id/btn5"
      app:layout_constraintRight_toRightOf="parent" />

  <Button
      android:id="@+id/btnShowText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="showText"
      android:text="Show Text"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent" />

  <Button
      android:id="@+id/btnClearList"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="clearList"
      android:text="Clear List"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent" />

  <ListView
      android:id="@+id/list_item"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginEnd="8dp"
      app:layout_constraintBottom_toTopOf="@+id/btn"
      app:layout_constraintEnd_toStartOf="@+id/btn"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/btnSubscribe"
      app:layout_constraintTop_toTopOf="parent"
      />


</android.support.constraint.ConstraintLayout>
